{{extend 'layout.html'}}
{{right_sidebar_enabled=False}}
<style>
    div.static {
            width: 200px;
            padding: 20px;
            display: inline-block;
            vertical-align:top;
        }
    div.contenedor{
        text-align:center;
    }
    h3{
        text-align:center;
    }
</style>

{{if not argumentosValidos:}}
        <h3>Error, usted modificó la url. Pulse el siguiente link para volver a la página principal.</h3>
        <p>{{=A(T("Volver a la página"), _href=URL('default', 'index'))}}</p>
{{else:}}
{{right_sidebar_enabled=tieneCompraVigente}}

<div>

    <div>
      <h3>Detalle de Producto: </h3>
    </div>

    <div class="contenedor">

        <div>
          <img src="{{=URL('producto','admin/download/%s'%producto.imagen)}}" width="150px">
        </div>


        <div class="static">
            <div class="row">
              {{if categoria=='3' :}}
                  <div>
                      <div><h4><span>{{=producto.nombre}}</span></h4></div>
                      <div>  <strong>Descripción: </strong>{{=producto.descripcion}} </div>
                      <div>  <strong>Cantidad disponible: </strong>{{=producto.cantidad}}</div>
                      <div>  <strong>Tipo: </strong>{{=producto.tipo}}</div>
                      <div>  <strong>Origen: </strong>{{=producto.origen}}</div>
                      <div>  <strong>Año: </strong>{{=producto.anio}}</div>
                      <div>  <strong>Bodega: </strong>{{=producto.bodega}}</div>
                      <div>  <strong>Precio: </strong>{{=producto.precioVenta}}</div>
                  </div>
              {{else:}}
                  <div>
                      <div><h4><span>{{=producto.nombre}}</span></h4></div>
                      <div><strong>Descripción: </strong>{{=producto.descripcion}} </div>
                      <div><strong>Cantidad disponible: </strong>{{=producto.cantidad}}</div>
                      <div><strong>Origen: </strong>{{=producto.origen}}</div>
                      <div><strong>Precio: </strong>{{=producto.precioVenta}}</div>
                  </div>
              {{pass}}
              <div class="row">
                  {{=A('Agregar al Carrito', _href=URL('detalleProducto/%s'%producto.id), _class="btn btn-primary" )}}
                  {{=A('Volver', _href=URL('productosListados/%s' %categoria), _class="w2p-form-button btn btn-default" )}}
              </div>
            </div>
        </div>

        <div>
            {{if right_sidebar_enabled:}}

                {{block right_sidebar}}
                <div class="panel panel-success">
                  <div class="panel-heading">
                      <h3 class="panel-title">Carrito de Compra</h3>
                  </div>
                  <div class="panel-body">
                    Items
                  </div>
                  <ul class="list-group">
                    <li class="list-group-item">{{=A(T("Ver compra / Finalizar "), _href=URL('venta', 'index'))}}</li>
                    <li class="list-group-item">{{=A(T("Cancelar Compra"), _href=URL('venta', 'index'))}}</li>
                  </ul>
                </div>
                {{end}}

            {{pass}}
        </div>

    </div>

</div>

{{pass}}
